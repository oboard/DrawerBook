<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.oboard.drawbook"
    android:versionCode="1"
    android:versionName="1.0.0"
    tools:overrideLibrary="android.support.v4" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22"
        tools:overrideLibrary="android.support.transition,android.support.v4,android.support.compat,android.support.mediacompat,android.support.coreutils,android.support.coreui,android.support.fragment,android.support.graphics.drawable.animated" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.oboard.drawbook.DrawActivity"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.oboard.drawbook.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>